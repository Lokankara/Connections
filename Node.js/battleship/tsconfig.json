{
  "compilerOptions": {
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "*": [
        "node_modules/*"
      ],
      "src/*": ["src/*"]
    },
    "esModuleInterop": true,
    "target": "ES6",
    "module": "CommonJS",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": ""
  },
  "types": ["ws"],
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "test", "dist", "**/*test.ts"]
}
